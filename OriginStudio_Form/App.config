<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" requirePermission="false" />
  </configSections>

  <!--<connectionStrings configSource="_config\Development\connectionStrings.config" />-->
  <connectionStrings>
    <add name="Database" connectionString="Data Source=.\SQLEXPRESS;Initial Catalog=Origin;Integrated Security=True" />
  </connectionStrings>
  
  <appSettings configSource="_config\Development\appSettings.config" />
  
  <startup> 
      <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
  </startup>

  <log4net>
    <!--<appender name="LogFileAppender" type="log4net.Appender.FileAppender">
      <file value="C:\Users\ivanp\Documents\visual studio 2017\Projects\Origin\OriginStudio\Logs\LogFile.txt" />
      <appendToFile value="true" />
      <encoding value="utf-8" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %-5level %logger – %message%newline" />
      </layout>
    </appender>-->

    <appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
      <param name="PreserveLogFileNameExtension" value="true" />
      <file value="C:\Users\ivanp\Documents\visual studio 2017\Projects\Origin\OriginStudio\Logs\log.txt" />
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <datePattern value="yyyyMMdd-HHmm" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %-5level %logger – %message%newline" />
      </layout>
    </appender>

    <root>
      <level value="DEBUG" />
      <appender-ref ref="RollingLogFileAppender" />
    </root>
  </log4net>
  
</configuration>
<div class="row" data-bind="visible: Visibilities.FormVisible">
    <!-- FORM -->
    <div class="col-xs-12">
        <div class="content-header">
            <h1 data-bind="text: $root.localizedText('Section.Form.Title')"></h1>
            <p data-bind="text: $root.localizedText('Section.Form.Subtitle')"></p>
        </div>
    </div>

    <div class="col-xs-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <!-- ko foreach: Properties -->
                    <div class="col-xs-12 col-md-6">
                        <!-- ko if: InputType == "String" -->
                        <div class="form-group">
                            <label for="DocumentNumber" data-bind="text: $root.localizedText(LocalizationName)"></label>
                            <div class="input-group">
                                <input type="text" class="form-control" data-bind="value: Value, attr: {}" />
                                <span class="input-group-btn">
                                    <label class="btn btn-primary">
                                        <span data-bind="text: $root.localizedText('Search.Button.Browse')"></span>
                                        <input class="hidden" type="file" data-bind="event: { change: function() { $root.onChangeFilterFile($element, Name) } }">
                                    </label>
                                </span>
                            </div>
                        </div>
                        <!-- /ko -->
                        <!-- ko if: InputType == "DateTime" -->
                        <div class="form-group">
                            <label data-bind="text: $root.localizedText(LocalizationName)"></label>
                            <div class='input-group'>
                                <input type='text' class="form-control date-picker"
                                       data-bind="datepicker: Value" />
                                <span class="input-group-addon">
                                    <i class="ion-ios-calendar-outline"></i>
                                </span>
                            </div>
                        </div>
                        <!-- /ko -->
                    </div>
                    <!-- /ko -->
                </div>
                <!-- ko if: $root.CompiledFilters() < $root.ExtractionSettings.MinimumCompiledFilter() -->
                <div class="row">
                    <div class="col-xs-12">
                        <span data-bind="text: $root.localizedText('Global.WarningDialog.RequiredMoreFilterCopiled.DescriptionRow.First')"></span>
                        <span data-bind="text: $root.ExtractionSettings.MinimumCompiledFilter"></span>
                        <span data-bind="text: $root.localizedText('Global.WarningDialog.RequiredMoreFilterCopiled.DescriptionRow.Filter')"></span>
                    </div>
                </div>
                <!-- /ko -->
            </div>

            <div class="panel-footer">
                <button type="button" class="btn btn-default" data-bind="click: onClickUndoSearch, text: $root.localizedText('Search.Button.Undo')"></button>
                <button type="button" class="btn btn-primary" data-bind="click: onClickExecuteSearch, text: $root.localizedText('Search.Button.Execute')"></button>
            </div>
        </div>
    </div>
    <!-- END FORM -->
</div>
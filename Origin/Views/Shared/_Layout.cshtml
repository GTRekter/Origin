<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- METATITLES -->
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="description" content="">
        <meta name="author" content="Ivan Porta - Andrea Giada Bassani ">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0" />
        <title>@ViewBag.Title</title>

        <!-- FAVICONS -->
        @*<link rel="apple-touch-icon" sizes="180x180" href="~/Images/favicons/apple-touch-icon.png">
        <link rel="icon" type="image/png" href="~/Images/favicons/favicon-32x32.png" sizes="32x32">
        <link rel="icon" type="image/png" href="~/Images/favicons/favicon-16x16.png" sizes="16x16">
        <link rel="manifest" href="~/Images/favicons/manifest.json">
        <link rel="mask-icon" href="~/Images/favicons/safari-pinned-tab.svg" color="#5bbad5">
        <link rel="shortcut icon" href="~/Images/favicons/favicon.ico">
        <meta name="msapplication-config" content="~/Images/favicons/browserconfig.xml">
        <meta name="theme-color" content="#ffffff">
        <meta name="user-scalable" content="no" />*@

        <!-- CSS -->
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")

        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body data-base-url="@Href("~")">

        <!-- NAVBAR -->
        <nav class="navbar navbar-default navbar-fixed-top topbar">
            <div class="container-fluid">
                <div class="navbar-header">
                    <p class="navbar-text">
                        <a href="#" class="sidebar-toggle">
                            <i class="ion-navicon" aria-hidden="true"></i>
                        </a>
                    </p>
                    <span class="navbar-brand">
                        <span data-bind="text: $root.localizedText('Navbar.Project.Name')"></span>
                    </span>
                </div>
            </div>
        </nav>
        <!-- END NAVBAR -->

        <article class="wrapper">

            <aside class="sidebar">
                <ul class="sidebar-nav">
                    <li class="active">
                        <a href="#dashboard" data-toggle="tab" data-bind="click: onClickDashboard">
                            <i class="ion-x1 ion-x1 ion-ios-home-outline" aria-hidden="true"></i> 
                            <span data-bind="text: $root.localizedText('Sidebar.Links.Dashboard')"></span>
                        </a>
                    </li>

                    <li>
                        <a href="#dogs" data-toggle="tab" data-bind="click: onClickItemsList">
                            <i class="ion-x1 ion-x1 ion-ios-list-outline" aria-hidden="true"></i>
                            <span data-bind="text: $root.localizedText('Sidebar.Links.ItemsList')"></span>
                        </a>
                    </li>
                </ul>

                <!-- ko if: $root.BackButtonVisible -->
                <ul class="sidebar-nav navigations">
                    <li>
                        <a href="#dashboard" data-toggle="tab" data-bind="click: onClickBackButton">
                            <i class="ion-x1 ion-x1 ion-ios-arrow-back" aria-hidden="true"></i>
                            <span data-bind="text: $root.localizedText('Sidebar.Links.Back')"></span>
                        </a>
                    </li>
                </ul>
                <!-- /ko -->
            </aside>

            <section class="main">
                @RenderBody()
            </section>

        </article>
        
        <!-- ERROR MODAL -->
        <div class="modal fade" tabindex="-1" role="dialog" data-bind="showModal: IsError">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title">
                            <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
                            <span data-bind="text: $root.localizedText('Global.UnexpectedErrorDialog.Title')"></span>
                        </h4>
                    </div>
                    <div class="modal-body">
                        <p data-bind="text: $root.localizedText('Global.UnexpectedErrorDialog.DescriptionRow.First')"></p>
                        <p data-bind="text: $root.localizedText('Global.UnexpectedErrorDialog.DescriptionRow.Second')"></p>
                    </div>
                    <div class="modal-body">
                        <p data-bind="text: ErrorDetails"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- END ERROR MODAL -->

        <!-- LOADING MODAL -->
        <div class="modal fade" tabindex="-1" role="dialog" data-bind="showModal: IsLoading">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-body text-center">
                        <p data-bind="text: $root.localizedText('Global.LoadingDialog.DescriptionRow.First')"></p>
                        <p data-bind="text: $root.localizedText('Global.LoadingDialog.DescriptionRow.Second')"></p>
                        <i class="ion-x1 ion-spin ion-ios-loop-strong"></i>
                    </div>
                </div>
            </div>
        </div>
        <!-- END LOADING MODAL -->

        <!-- INFO MODAL -->
        <div class="modal fade" tabindex="-1" role="dialog" data-bind="showModal: IsInfo">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-body text-center">
                        <p data-bind="text: InfoDetails()"></p>
                        <i class="ion-x1 ion-spin ion-gear-a"></i>
                    </div>
                </div>
            </div>
        </div>
        <!-- END INFO MODAL -->

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/plugins")
        @RenderSection("scripts", required: false)

        <script src="~/Content/Scripts/Pages/Main.js"></script>

    </body>
</html>
